{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "strictPropertyInitialization": false,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "sourceMap": true,
